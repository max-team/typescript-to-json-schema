{
  "include": ["src/**.ts"],
  "exclude": ["__tests__/**"],
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "CommonJs",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "lib",
    "baseUrl": "./"
  }
}