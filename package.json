{
  "name": "@hoth/typescript-to-json-schema",
  "version": "1.0.23",
  "description": "typescript to json-schema transpiler",
  "keywords": [
    "typescript",
    "json-schema"
  ],
  "author": "cxtom <cxrom2008@gamil.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/max-team/typescript-to-json-schema.git"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "dependencies": {
    "fs-extra": "^8.0.1",
    "lodash": "^4.17.20",
    "ts-morph": "^2.3.0",
    "typescript": "~3.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/fs-extra": "^7.0.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.12",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "commitizen": "^4.2.1",
    "conventional-changelog": "^3.1.3",
    "conventional-changelog-cli": "^2.0.12",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "jest": "^26.4.2",
    "jest-config": "^26.4.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^8.2.0"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest/presets/js-with-babel",
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/**.ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
